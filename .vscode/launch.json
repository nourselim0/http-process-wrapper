{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "console": "internalConsole",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug (No Reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app"
            ],
            "console": "internalConsole",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
    ]
}